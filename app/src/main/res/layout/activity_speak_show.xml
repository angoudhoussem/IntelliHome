<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdeecc">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.rootkrm.itgate.com.itgate.activites.Speak_show"
    android:background="#fcf7ec">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSkyBlue"
        android:theme="@style/AppTheme.PopupOverlay" />

    <ImageButton
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:id="@+id/imgButton"
        android:layout_marginTop="60dp"
        android:src="@drawable/microphone"
        android:onClick="buttonClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clic to Speak !"
        android:id="@+id/text1"
        android:layout_below="@+id/imgButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:id="@+id/imgHomeBtn"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/home"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:id="@+id/imgEntBtn"
        android:src="@drawable/building"
        android:layout_alignTop="@+id/imgHomeBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="See Home !"
        android:id="@+id/textHome"
        android:layout_below="@+id/imgHomeBtn"
        android:layout_alignLeft="@+id/imgHomeBtn"
        android:layout_alignStart="@+id/imgHomeBtn"
        android:layout_marginLeft="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="See Entreprise !"
        android:id="@+id/textEnt"
        android:layout_below="@+id/imgEntBtn"
        android:layout_alignRight="@+id/imgEntBtn"
        android:layout_alignEnd="@+id/imgEntBtn" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:id="@+id/imgAddHome"
        android:layout_below="@+id/textHome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/addsquare" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Home !"
        android:id="@+id/textAddH"
        android:layout_below="@+id/imgAddHome"
        android:layout_alignLeft="@+id/imgAddHome"
        android:layout_alignStart="@+id/imgAddHome"
        android:layout_marginLeft="18dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:id="@+id/imgAddEnt"
        android:layout_alignTop="@+id/imgAddHome"
        android:layout_alignRight="@+id/textEnt"
        android:layout_alignEnd="@+id/textEnt"
        android:src="@drawable/addsquare" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Entreprise !"
        android:id="@+id/textAddEnt"
        android:layout_below="@+id/imgAddEnt"
        android:layout_alignRight="@+id/imgAddEnt"
        android:layout_alignEnd="@+id/imgAddEnt" />

</RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/colorList"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="?attr/actionBarSize"/>

</android.support.v4.widget.DrawerLayout>
