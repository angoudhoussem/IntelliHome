<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rootkrm.itgate.com.itgate.activites.MainActivity"
    android:background="#fdeecc">

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/btn_new_ac"
            android:layout_alignTop="@+id/btn_connect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/btn_connect"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Votre E-mail"
        android:id="@+id/email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Votre Mot de Passe"
        android:id="@+id/pass"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/email"
        android:layout_alignLeft="@id/email" />

</RelativeLayout>
